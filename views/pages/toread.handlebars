<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/public/stylesheet.css">
    <title>Book Database</title>
    <nav>
    <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/logout">Logout</a></li>
    <li><a href="/toread">To-Read Books</a></li>
    <li><a href="/completed">Completed Books</a></li>
    </ul>
    </nav>
</head>
<body>
    <main>
        <table>
	        <tr>
	            <th>Title</th>
	            <th>Author</th>
                <th>Notes</th>
	        </tr>
	        {{#each books}}
	         <tr>
	            <td><a href="/book/{{bookid}}" alt="{{bookid}}">{{title}}</a></td>
	            <td>{{author}}</td>
                <td id="{{{bookid}}}" >
                    <p>{{notes}}</p> 
                    <textarea id="notes" name="Notes"></textarea>
                    <form id="update" action="/toread/{{bookid}}" onsubmit="annotate(&quot;{{bookid}}&quot, 1); return false;">
                    <button type="submit" formmethod="POST"> Update Notes </button>
                    </form>
                </td>
	        </tr>
	        {{/each}}
	    </table>
    </main>
    <script src="/public/ajax.js"></script>
</body>